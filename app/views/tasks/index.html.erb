<h1>タスク一覧</h1>

<% if logged_in? %>
<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.id, task %> : <%= task.content %> : <%= task.status %></li>
    <% #リンク先のtaskは、モデルインスタンス。taskpath(task)自動的にshowアクションにリンクしてくれる。 %>
  <% end %>
</ul>
<%= paginate @tasks %>

<%= link_to "タスク新規作成" , new_task_path(@task) %>

<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the Microposts</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
  
<% end %>
